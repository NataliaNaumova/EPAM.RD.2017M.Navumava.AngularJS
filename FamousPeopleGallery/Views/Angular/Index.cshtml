@using System.Web.Optimization
<!DOCTYPE html>

<html ng-app="galleryApp">
<head>
    <base href="/" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href=@Url.Content("~/Content/images/favicon.ico") type="image/x-icon" />
    <title>Index</title>
    @Scripts.Render("~/Scripts/angular")
    @Styles.Render("~/Content/css")

</head>
<body>
    <header>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">
                        <img class="logo-responsive" src=@Url.Content("~/Content/images/logo.png") alt="Logo" />
                    </a>
                </div>
                <div class="collapse navbar-collapse" id="navbar" ng-controller="navigationController">
                    <ul class="nav navbar-nav">
                        <li ng-show="userId != null">
                            <a href="/Angular/addPhoto" class="btn btn-success add-photo-button"><span class="glyphicon glyphicon-plus"></span> Add photo</a>
                        </li>
                        <li>
                            <a href="Angular/gallery"><span class="glyphicon glyphicon-picture"></span> Gallery</a>

                        </li>
                        
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        <li ng-show="userId == null">
                            <a href="/Angular/register"><span class="glyphicon glyphicon-user"></span> Sign Up</a>
                        </li>
                        <li ng-show="userId == null">
                            <a href="/Angular/login"><span class="glyphicon glyphicon-log-in"></span> Log in</a>

                        </li>
                        
                        <li ng-show="userId != null">
                            <a> Hello<span ng-show="userLogin!=null">, {{userLogin}}</span>!</a>

                        </li>
                        <li ng-show="userId != null" ng-controller="logoutController">
                            <a href="" ng-click="logout()"><span class="glyphicon glyphicon-log-out"></span> Log out</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div ng-view>
        <img src=@Url.Content("~/Content/images/preloader.gif") alt="Loading..." />
    </div>

    <footer class="container-fluid text-center">
        <p>&copy; @DateTime.Now.Year, Naumova Natalia</p>
    </footer>

</body>
</html>
